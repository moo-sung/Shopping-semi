<%@page import="java.util.ArrayList"%>
<%@page import="dao.AddressDAO"%>
<%@page import="dto.AddressDTO"%>
<%@page import="java.util.List"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@include file="/security/login_check.jspf"%>
<%
String referer = request.getHeader("referer");

List<AddressDTO> addressList = AddressDAO.getDAO().selectAllAddressList("moo_sung@naver.com");
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>nookyoon</title>
<link
	href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
	rel="stylesheet">
<link rel="stylesheet"
	href="<%=request.getContextPath()%>/css/common.css">
<link rel="icon" href="<%=request.getContextPath()%>/images/favicon.ico">
<style type="text/css">
/* CSS 작성 */
table {
	border: 1px solid rgb(207, 207, 207);
	border-collapse: collapse;
	font-size: 100%;
	margin: 0 auto;
}

table a {
	background-color: rgb(207, 207, 207);
	color: rgb(13, 13, 13);
}

td, th {
	border: 1px solid rgb(207, 207, 207);
}

th {
	text-align: center;
	padding: 10px 18px 10px 18px;
}

td {
	text-align: left;
	padding: 10px 10px 10px;
}

input {
	font-size: 18px;
	border: none;
	padding-left: 1px;
	line-height: 20px;
	min-width: 300px;
	cursor: pointer;
}

input:focus {
	outline: none;
}

input:hover{
	text-decoration: underline;
}

p {
	font-size: 18px;
	margin: 20px 20px 12px;
	padding: 13px 10px 0px;
	text-align: center;
}
</style>
</head>
<body>
	<div id="wrap">
		<div id="container">
			<div id="content">
				<div class="main">
					<div class="titleArea">
						<h1>주소 불러오기</h1>
						<br>
					</div>
					<%
					if (addressList.isEmpty()) {
					%>
					<p>저장된 주소가 없습니다</p>
					<%
					} else {
					%>

					<table>
						<tr>
							<th>주소지명</th>
							<th>우편 번호</th>
							<th>도로명 주소</th>
							<th>상세 주소</th>
						</tr>
						<%
							int i = 0;
							for (; i < addressList.size(); i++) {
						%>
						<tr>
							<td><input type="text" id = "address_id<%=i %>" name = "address_id<%=i %>"
							onclick="load()" value="<%=addressList.get(i).getId()%>" readonly="readonly"></td>
						</tr>
						<%}%>
					</table>
					<%}%>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		function load() {
			alert("load function activated");
		}
	</script>
</body>
</html>