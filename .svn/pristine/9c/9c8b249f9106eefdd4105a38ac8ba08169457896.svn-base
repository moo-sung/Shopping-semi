<%@page import="dao.AddressDAO"%>
<%@page import="dto.AddressDTO"%>
<%@page import="java.util.List"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@include file="/security/login_url.jspf"%>
<%
String referer = request.getHeader("referer");
%>
<%
List<AddressDTO> addressList = AddressDAO.getDAO().selectAllAddressList(loginMember.getEmail());
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>nookyoon</title>
<link
	href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
	rel="stylesheet">
<link rel="stylesheet"
	href="<%=request.getContextPath()%>/css/common.css">
<link rel="icon" href="<%=request.getContextPath()%>/images/favicon.ico">
<style type="text/css">
/* CSS 작성 */
table {
	border: 1px solid rgb(207, 207, 207);
	border-collapse: collapse;
	font-size: 100%;
	margin: 0 auto;
}

table a {
	background-color: rgb(207, 207, 207);
	color: rgb(13, 13, 13);
}

td, th {
	border: 1px solid rgb(207, 207, 207);
}

th {
	text-align: left;
	padding: 11px 0 10px 18px;
}

td {
	text-align: left;
	padding: 10px 10px 10px;
}

p {
	font-size: 18px;
	margin: 20px 20px 12px;
	padding: 13px 10px 0px;
}
</style>
</head>
<body>
	<div id="wrap">
		<div id="container">
			<div id="content">
				<div class="main">
					<div class="titleArea">
						<h1>주소 불러오기</h1>
						<br>
					</div>
					<%
					if (addressList.isEmpty()) {
					%>
					<p>저장된 주소가 없습니다</p>
					<%
					} else {
					%>
					<div class="addresslist">
						<table>
							<tr>
								<th><input type="checkbox" id="allCheck"></th>
								<th>Item</th>
								<th>Qty</th>
								<th>Price</th>
								<th>Total</th>
							</tr>
							<tbody>
								<tr>
									<td><input type="text" id="address_id" name="address_id"
										placeholder="주소지 별명을 입력해주세요"> <input type="text"
										id="post_code" name="post_code" readonly="readonly"> <input
										type="text" id="road_address" name="road_address"
										readonly="readonly"> <input type="text"
										id="detail_address" name="detail_address"
										placeholder="상세 주소를 입력해주세요"></td>
								</tr>
							</tbody>
						</table>
						<%
						}
						%>
					</div>
				</div>
			</div>
		</div>
</body>
</html>